root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
max_line_length = off

[*.scd]
indent_style = tab
max_line_length = off

[*.py]
indent_style = space
indent_size = 4

[.travis.yml]
indent_style = space
indent_size = 2
max_line_length = off

[Makefile]
indent_style = tab

[mkdocs.yml]
indent_style = space
indent_size = 4
max_line_length = off
